	public static void addCarrinho (int id) {
		
		

		for (int i=0; i< listEletronicos.size();i++) {
			if (listEletronicos.get(i).id == id);
		}	 carrinho.add();
		
		
		
	}


	// as listas serão rodadas a partir do paramemtro passado no scanner

	public static void main(String[] args) {


		alimento();
		eletronico ();
		higiene();

		Scanner sc = new Scanner(System.in);

		boolean sair=false;

		while(!sair) {
			sair = home(sc);
		}


	}

	public static boolean home(Scanner sc) {
		System.out.println("====== APSMART COMPRAS ======");
		System.out.println("Acesse nosso menu e escolha a categoria que deseja");
		System.out.println("ou consulte seu carrinho de compras");
		System.out.println("1 - Produtos Eletronicos");
		System.out.println("2 - Produtos de Alimentos");
		System.out.println("3 - Produtos de Higiene");
		System.out.println("4 - carrinho de compras ");
		System.out.println("999 - Sair");
		int opt=getValor(sc);

		// opcao sair

		if(opt==-1) {
			return true;
		}

		// categoria selecionada recebeu como valor -1 (la em cima) para o MENU permanecer visível no loop

		categoriaSelecionada= opt;

		// o parametro passado para o switch vai receber o valor que o usuário digitar no menu
		switch (categoriaSelecionada) {

		case 1:
			printList(categoriaSelecionada);	
			System.out.println("Digite o codigo do seu produto");


			break;

		case 2:
			printList(categoriaSelecionada);
			System.out.println("Digite o codigo do seu produto");

			break;

		case 3:

			printList(categoriaSelecionada);
			System.out.println("Digite o codigo do seu produto");

			break;

		case 4:
			
			printList(categoriaSelecionada);
			System.out.println("Itens do Carrinho: ");


			break;
			
			default:
			System.out.println("...:::Opcao invlida:::...");

			break;
		}
		return false;
	}


	// esse método facilita a apresentação das listas e será chamado no switch case
	public static void printList(int opc) {

		listaSelecionada=null;
		if(opc ==1) {
			listaSelecionada = listEletronicos;
		} else if(opc ==2) {
			listaSelecionada= listAlimentos;
		} else if(opc ==3) {
			listaSelecionada=listHigiene;
		} else if (opc==4) {
			//listaSelecionada=carrinho;
		}

		// esse FOR imprime os atributos dos objetos, o index vai enumerar 

		for (Object produto : listaSelecionada) {
			System.out.println(index + "-"+ "Cód (" +((Produto)produto).getId() + ")    " + ((Produto)produto).getTipo() + "  -  " + ((Produto)produto).getFabricante() + " -  R$"+((Produto)produto).getPreco());
			index++;
		}
		System.out.println("0 - Home");
		System.out.println("999 - Sair");

	}

	public static boolean selecionarProduto(Scanner sc) {
		return false;
		
	} 
	
	

	// esse getValor
	public static int getValor(Scanner sc){

		int opt = sc.nextInt();

		if(opt==999) {
			return -1;
		}
		if(opt==0) {
			return 0;
		}

		return opt;

	}





}
